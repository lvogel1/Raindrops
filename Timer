//shows how long you've been playing the game
class Timer {

  int oldTime;
  PVector loc;

  Timer () {
    oldTime = 0;
    loc = new PVector (100, 100);
    c = color (255);
  }

  void show () {
    textSize (50);
    textAlign (CENTER);
    fill (c);
    text ("Timer:", loc.x,loc.y);
    text(millis()/1000, loc.x+125, loc.y);
    if (life <= 0) {
      c = color (0);
      text(millis()/1000, loc.x, loc.y);
    }
  }
}
